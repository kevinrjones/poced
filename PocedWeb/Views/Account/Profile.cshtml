@model PocedWeb.Models.ProfileModel

@{
    ViewData["Title"] = "Profile for " + User.Identity.Name;
}

<div class="page-header">
    <h1>Profile <small>@User.Identity.Name</small></h1>
</div>

<div class="row">
    <div class="col-sm-6">
        @if (true.Equals(ViewData["Success"]))
        {
            <div class="alert alert-success">Update Successful</div>
        }
        <div class="panel panel-default">
            <div class="panel-heading">
                User Information
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("UpdateProfile", "Account"))
                {
                    @Html.ValidationSummary(true)

                    <fieldset>
                        <div class="form-group">
                            @Html.LabelFor(x => x.First)
                            @Html.ValidationMessageFor(x => x.First, null, new { @class = "label label-danger pull-right" })
                            @Html.TextBoxFor(x => x.First, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Last)
                            @Html.ValidationMessageFor(x => x.Last, null, new { @class = "label label-danger pull-right" })
                            @Html.TextBoxFor(x => x.Last, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Update Profile</button>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
